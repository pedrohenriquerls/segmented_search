<%= form_for(@query_segment) do |f| %>
  <% if @query_segment.errors.any? %>
      <% @query_segment.errors.full_messages.each do |message| %>
          <p class="bg-warning"><%= message %></p>
      <% end %>
  <% end %>

  <div id="form_container">

  </div>

  <div class="actions">
    <%= f.submit class:'btn btn-default' %>
  </div>
<% end %>


<script id="segment_template_form" type="text/x-handlebars-template">
  <div class="group-{{number}} form-inline">
    <div class="form-group">
      <select class="attribute_name">
        {{#each attributes}}
          <option>{{this}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <select class="operator">
        {{#each operators}}
        <option>{{this}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <input class="form-control value" placeholder="Parameter">
    </div>
  </div>
</script>