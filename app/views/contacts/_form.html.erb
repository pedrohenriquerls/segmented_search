<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <% @contact.errors.full_messages.each do |message| %>
      <p class="bg-warning"><%= message %></p>
    <% end %>
  <% end %>

  <div class="form-group">
    <label>Nome</label>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Nome' %>
  </div>

  <div class="form-group">
    <label>Email</label>
    <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>

  <div class="form-group">
    <label>Cargo</label>
    <%= f.text_field :role, class: 'form-control', placeholder: 'Cargo' %>
  </div>

  <div class="form-group">
    <label>Estado</label>
    <%= select(:contact, :state, Contact::STATES, {}, {class: 'form-control'}) %>
  </div>

  <div class="form-group">
    <label>Idade</label>
    <%= f.text_field :age, class: 'form-control', placeholder: 'Idade', type: 'number' %>
  </div>

  <div class="actions">
    <%= f.submit class:'btn btn-default' %>
  </div>
<% end %>
